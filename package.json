  "scripts": {
    "build": "webpack --config webpack.prod.cjs --progress",
    "dev": "webpack --config webpack.dev.cjs --progress --no-watch",
    "watch": "webpack --config webpack.dev.cjs --watch",
    "clean": "rimraf ./build/**.{css,js}"
  },
