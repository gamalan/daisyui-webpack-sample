  "bugs": {
    "url": "https://github.com/gamalan/daisyui-webpack-sample/issues"
  },
  "homepage": "https://github.com/gamalan/daisyui-webpack-sample#readme",
  "devDependencies": {
    "@tailwindcss/cli": "^4.0.9",
    "@tailwindcss/postcss": "^4.0.9",
    "copy-webpack-plugin": "^13.0.0",
    "css-loader": "^7.1.2",
    "css-minimizer-webpack-plugin": "^7.0.0",
    "daisyui": "^5.0.0",
    "mini-css-extract-plugin": "^2.9.2",
    "postcss": "^8.5.3",
    "postcss-import": "^16.1.0",
    "postcss-loader": "^8.1.1",
